<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hotelapp.controllers.ReservationController"
      spacing="14" alignment="TOP_CENTER"
      prefWidth="900" prefHeight="600"
      style="-fx-padding:18;">

    <!-- Top bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Back" onAction="#goBack"/>
        <Label text="New Reservation"
               style="-fx-font-size:18px; -fx-font-weight:bold;"/>
    </HBox>

    <!-- Booking form -->
    <GridPane hgap="12" vgap="12" style="-fx-padding:20;">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
            <ColumnConstraints prefWidth="300"/>
            <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>

        <!-- Row 1 -->
        <Label text="Room:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbRoom"
                  prefWidth="280"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Row 2 -->
        <Label text="Check-in:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpCheckIn"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Check-out:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <DatePicker fx:id="dpCheckOut"
                    GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <!-- Row 3 -->
        <Label text="Guest Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tfName"
                   promptText="Full name"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <TextField fx:id="tfPhone"
                   promptText="Phone"
                   GridPane.rowIndex="2" GridPane.columnIndex="3"/>

        <!-- Row 4 -->
        <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="tfAddress"
                   promptText="Permanent address (required)"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Row 5 -->
        <Label text="NID/Passport:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        <TextField fx:id="tfNidPassport"
                   promptText="NID or Passport number (required)"
                   GridPane.rowIndex="3" GridPane.columnIndex="3"/>

        <!-- Row 5 -->
        <Label text="Price/night:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="lblPrice"
               text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Nights:" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
        <Label fx:id="lblNights"
               text="0" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

        <!-- Row 6 -->
        <Label text="Total:" GridPane.rowIndex="5" GridPane.columnIndex="0"
               style="-fx-font-weight:bold;"/>
        <Label fx:id="lblTotal"
               text="Tk 0.00"
               GridPane.rowIndex="5" GridPane.columnIndex="1"
               style="-fx-font-size:16px; -fx-font-weight:bold;"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Calculate" onAction="#handleCalculate"/>
        <Button text="Book" onAction="#handleBook"/>
    </HBox>

    <!-- Status message -->
    <Label fx:id="lblStatus" text=""
           style="-fx-font-size:14px; -fx-text-fill:green;"/>

</VBox>
